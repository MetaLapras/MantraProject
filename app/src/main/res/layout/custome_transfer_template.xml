<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/workerTransfer_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_workerTransfer_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|start"
                    android:text="Worker Id : 123456789101112"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_workerTransfer_name"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|start"
                    android:layout_width="match_parent"
                    android:textStyle="italic"
                    android:text="Salman Khan"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/txt_workerTransfer_number"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|start"
                    android:layout_width="match_parent"
                    android:textStyle="italic"
                    android:text="9211420420"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/txt_workerTransfer_number2"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|start"
                    android:layout_width="match_parent"
                    android:textStyle="italic"
                    android:text="9211420420"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/txt_workerTransfer_gender"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|start"
                    android:layout_width="match_parent"
                    android:textStyle="italic"
                    android:text="Gender : Male"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <!-- <Button
                android:id="@+id/btn_worker_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Edit"/>

            <Button
                android:id="@+id/btn_worker_Delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete"/>
-->
            <Button
                android:id="@+id/btn_workerTransfer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Transfer"
              />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>