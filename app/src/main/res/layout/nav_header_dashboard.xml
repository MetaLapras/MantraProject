<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bricks"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/ic_person" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee ID : "/>

        <TextView
            android:id="@+id/txt_empId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salman@123"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "/>
            <TextView
                android:id="@+id/txt_empName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salman "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB : "/>
            <TextView
                android:id="@+id/txt_empDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/ 3/ 2011  "/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_phone_black_24dp"/>
                <TextView
                    android:id="@+id/txt_empcontactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 123456789 "/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                <TextView
                    android:id="@+id/txt_empalternatingNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 123456789 "/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_person"/>
                <TextView
                    android:id="@+id/txt_empgender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select gender "/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_address" />

                <TextView
                    android:id="@+id/txt_empaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Adderss" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

