<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.UploadWorkerAttendence"
    android:orientation="vertical"
    android:background="@drawable/ic_loginbackground">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_hint="Search"
        app:mt_speechMode="false"
        android:id="@+id/workerAttendence_searchBar"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/workerattendence_recycler"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/workerAttendence_searchBar"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_submit_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"

        android:textAllCaps="false"
        android:layout_gravity="center"/>
</RelativeLayout>