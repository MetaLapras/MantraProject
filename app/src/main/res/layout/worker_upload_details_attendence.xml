<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/workerupload_linear_layout"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/workerattendence_photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_workerattendence_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:text="Worker Id : 123456789101112"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_workerattendence_name"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:text="Salman Khan"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/txt_workerattendence_number"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:text="9211420420"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/txt_workerattendence_number2"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:text="9211420420"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/txt_workerattendence_gender"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|start"
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:text="Gender : Male"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/checkinTime_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CheckIn Time"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="#4beb2b"/>

                <Button
                    android:id="@+id/checkOutTime_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CheckOut Time"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="#fc0410"/>
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>